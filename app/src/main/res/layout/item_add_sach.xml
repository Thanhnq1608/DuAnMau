<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spn_ten_type_itemAđSach"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/edt_id_addBook"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="mã sách" />

        <EditText
            android:id="@+id/edt_name_addBook"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="tên sách" />

        <EditText
            android:id="@+id/edt_nxb_addBook"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"

            android:hint="NXB sách" />

        <EditText
            android:id="@+id/edt_tacGia_addBook"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="Tác giả sách" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/edt_soLuong_addBook"
            android:inputType="number"
            android:hint="Số Lượng" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/edt_price_addBook"
            android:inputType="number"
            android:hint="Giá Bán" />
        <!--            android:id="@+id/"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_itemAddSach"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:text="Save"></Button>

            <Button
                android:id="@+id/btn_cancel_itemAddSach"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:text="Cancel"></Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>