<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="400dp"
        android:minHeight="350dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mã Thể Loại"
            android:id="@+id/edt_id_type_itemType"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tên Thể Loại"
            android:id="@+id/edt_name_type_itemType"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:id="@+id/edt_description_type_itemType"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Vị trí"
            android:id="@+id/edt_location_type_itemType"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Link Background"
            android:id="@+id/edt_background_type_itemType"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Save"
                android:id="@+id/btn_save_itemType"></Button>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:id="@+id/btn_cancel_itemType"
                android:layout_marginLeft="20dp"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>